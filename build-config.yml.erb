---
targets:
<%
  platforms = %w[sid-amd64 bullseye-amd64 buster-amd64]
  versions = %w[2.6.9 2.7.5 3.0.3 3.1.0-preview1]
  matrix = platforms.product(versions)

  matrix.each do |platform, version|
    case platform
    when 'sid-amd64'
      image = 'minimum2scp/ruby:latest'
    when 'bullseye-amd64'
      image = 'minimum2scp/ruby-bullseye:latest'
    when 'buster-amd64'
      image = 'minimum2scp/ruby-buster:latest'
    end

    case version
    when '3.1.0-preview1', '3.0.3'
      update_rubygems = false
      install_bundler = false
      install_legacy_bundler = '1.17.3'
      ruby_configure_opts = '--enable-load-relative'
    when '2.7.5'
      update_rubygems = '3.2.32'
      install_bundler = false
      install_legacy_bundler = '1.17.3'
      ruby_configure_opts = '--enable-load-relative'
    else
      update_rubygems = '3.2.32'
      install_bundler = false
      install_legacy_bundler = '1.17.3'
      ruby_configure_opts = '--enable-load-relative --disable-install-doc'
    end

    definition = case version
                 when '3.0.3'
                   'https://cache.ruby-lang.org/pub/ruby/3.0/ruby-3.0.3.tar.gz#3586861cb2df56970287f0fd83f274bd92058872d830d15570b36def7f1a92ac'
                 when '2.7.5'
                   'https://cache.ruby-lang.org/pub/ruby/2.7/ruby-2.7.5.tar.bz2#d6b444341a5e06fcd6eaf1feb83a1c0c2da4705dbe4f275ee851761b185f4bd1'
                 when '2.6.9'
                   'https://cache.ruby-lang.org/pub/ruby/2.6/ruby-2.6.9.tar.bz2#a0639060c4519572e51828eb742f09dd40f154c820f6007246de7a2090e3ee45'
                 else
                   nil
                 end

-%>
  - image: <%= image %>
    platform: <%= platform %>
    version: <%= version %>
    <%- if definition -%>
    src: '<%= definition %>'
    <%- end -%>

    envs:
      RUBY_CONFIGURE_OPTS: <%= ruby_configure_opts.dump %>

    before_build:
      ## assert no-merged-usr (see https://github.com/minimum2scp/dockerfiles/pull/191)
      - if [ -L /bin -o -L /lib -o -L /sbin ]; then exit 1; fi

    after_build:
      - rbenv global <%= version %>
      - ruby --version
      - gem --version
      <%- if update_rubygems -%>
      - gem update --system <%= update_rubygems %> -N
      - gem --version
      <%- end -%>
      <%- if install_legacy_bundler -%>
      - gem install bundler --version <%= install_legacy_bundler %> -f -N
      <%- end -%>
      <%- if install_bundler -%>
      - gem install bundler --version <%= install_bundler %> -f -N
      <%- end -%>
      - gem install pry pry-doc pry-coolline -N

<% end %>
